<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageToTextActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:lineSpacingExtra="0.2dp"
            android:letterSpacing="0.1"
            android:text="Image to text Translation\n English to hausa only"
            android:layout_height="wrap_content"/>


        <ImageView
            android:layout_width="150dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/btnUpload"
            android:src="@drawable/baseline_upload_24"
            android:layout_height="150dp"/>

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:lineSpacingExtra="0.2dp"
            android:letterSpacing="0.1"
            android:layout_marginBottom="10dp"
            android:text="Upload Image"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/selected_image"
            android:layout_margin="15dp"
            android:textColor="@color/black"

            android:lineSpacingExtra="0.2dp"
            android:letterSpacing="0.1"
            android:text="Selectd Image"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/button_translate"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:text="Process Image" />

        <!-- TextView to display the translated text -->

        <TextView
            android:layout_width="match_parent"
            android:text="Extracted Text"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/processedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textAppearance="?android:textAppearanceMedium" />



        <TextView
            android:layout_width="match_parent"
            android:text="Translated Text"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/hausaTranslatedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textAppearance="?android:textAppearanceMedium" />

        <!-- Button to copy the translated text -->





    </LinearLayout>

</ScrollView>